FROM   --platform=linux/amd64 node

RUN apt update \
    && apt install -y wget gnupg \
    && wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' \
    && apt update \
    && apt install -y google-chrome-stable fonts-ipafont-gothic fonts-wqy-zenhei fonts-thai-tlwg fonts-kacst fonts-freefont-ttf libxss1 libxshmfence-dev \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*
    
COPY ./bugbounty/config/start.sh /start.sh

RUN chmod +x /start.sh

RUN mkdir -p /app

WORKDIR /app

COPY --chown=www-data:www-data ./bugbounty/app .

RUN npm install

RUN npx puppeteer browsers install chrome

EXPOSE 80

CMD /start.sh
